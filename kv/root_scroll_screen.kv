#: import gch kivy.utils.get_color_from_hex

<RootScrollScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos

    MDBoxLayout:
        id: outer_box_layout
        orientation: "vertical"
        size_hint: None, None
        size: (root.size[0], root.size[1])

        TextInput
            id:tags
            size_hint: 0.5, None

        MDToolbar:
            id: tool_bar
            title: "BooruViu"
            pos_hint: {"top" : 1}
            elevation: 10
            right_action_items: [["magnify", lambda x: root.search()],["cog", lambda x: set_screen(root, "provider setup screen")], ["text", lambda x:x]]


        ScrollView:
            id: image_scroll_view
            do_scroll_x: False
            do_scroll_y: True
            always_overscroll: True
