#: import gch kivy.utils.get_color_from_hex
#: import provider_cache core.caches.provider_cache

<SettingsBooruConfigScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        cols: 1
        size: (root.size[0], root.size[1])
        size_hint: (None, None)

        MDToolbar:
            title: "Settings"
            pos_hint: {"top" : 1}
            elevation: 10

            left_action_items: [["arrow-left", lambda x: str(set_screen('provider setup screen')) + str(provider_cache['home screen'].read_user_rules())]]

        MDBoxLayout:
            padding_x: 10
            spacing: 10

            ScrollView:
                do_scroll_y: True
                do_scroll_x: False

                MDGridLayout:
                    cols: 1

                    MDTextField:
                        id: tags_text_box
                        hint_text: "Tags"
                        mode: "rectangle"
                        on_text_validate: root.pack_tag(self)

                    MDList:
                        id: tag_list

                    MDTextField:
                        id: blacklist_text_box
                        hint_text: "Blacklist"
                        mode: "rectangle"
                        on_text_validate: root.pack_blacklist(self)

                    MDList:
                        id: blacklist_list