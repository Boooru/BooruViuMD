#: import SettingsToolbar ui.screens.settings_screens.SettingsToolbar
#: import SettingsCache core.caches.general_config
#: import set_app_color util.utils.set_app_color
#: import set_app_theme util.utils.set_app_theme

<SettingsAppearanceScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        cols: 1
        size: (root.size[0], root.size[1])
        size_hint: (None, None)

        SettingsToolbar:

        ScrollView:
            id: settings_scroller
            do_scroll_y: True
            do_scroll_x: False

            MDGridLayout:
                id: content_container
                cols: 1
                adaptive_height: True

                MDBoxLayout:
                    id: color_container
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: 30
                    padding: 30

                    MDTextField:
                        id: color_text_box
                        hint_text: "Color"
                        mode: "rectangle"
                        on_text_validate: set_app_color(self.text)

                    MDRaisedButton:
                        text: 'RESET'
                        on_press: set_app_color('Blue')

                MDBoxLayout:
                    id: theme_container
                    orientation: 'horizontal'
                    adaptive_height: True
                    spacing: 30
                    padding: 30

                    MDTextField:
                        id: color_text_box
                        hint_text: "Theme"
                        mode: "rectangle"
                        on_text_validate: set_app_theme(self.text)

                    MDRaisedButton:
                        text: 'RESET'
                        on_press: set_app_theme('Dark')