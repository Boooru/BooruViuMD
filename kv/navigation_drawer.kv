#: import set_screen ui.screens.screen_util.set_screen

<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height
        Image:
            id: avatar
            size_hint: None, None
            size_hint_x: 1
            allow_stretch: True
            keep_ratio: True
            source: "assets/images/banner.png"
    MDLabel:
        text: "BooruViu"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]
    MDLabel:
        text: "booruviu@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        MDList:
            OneLineListItem:
                text: "Home"
                on_press:
                    root.parent.set_state("close")
                    set_screen('home screen')
            OneLineListItem:
                text: "Settings"
                on_press:
                    root.parent.set_state("close")
                    set_screen("provider setup screen")
