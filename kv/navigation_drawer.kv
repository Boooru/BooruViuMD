<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height
        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "kivymd.png"
    MDLabel:
        text: "BooruViu"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]
    MDLabel:
        text: "booruviu@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        MDList:
            OneLineListItem:
                text: "Home"
                on_press:
                    app.root.nav_drawer.set_state("close")
                    root.screen_manager.current = "root scroll screen"
            OneLineListItem:
                text: "Settings"
                on_press:
                    app.root.nav_drawer.set_state("close")
                    root.screen_manager.current = "provider setup screen"