#: import gch kivy.utils.get_color_from_hex
#: import open_booru_config_screen ui.screens.settings_screens.open_booru_config_screen

<SettingsProviderScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos


    MDGridLayout:
        cols: 1
        size: (root.size[0], root.size[1])
        size_hint: (None, None)

        SettingsToolbar:

        ScrollView:
            id: settings_scroller
            do_scroll_y: True
            do_scroll_x: False

            MDGridLayout:
                id: content_container
                cols: 3
                adaptive_height: True
                size_hint_x: 0.33
                padding: 5

                MDLabel:
                    text: "Gelbooru"

                MDSwitch:
                    id: gelbooru_switch
                    on_active: root.set_provider(self, "Gelbooru")

                MDIconButton:
                    icon: 'cog'
                    on_press: open_booru_config_screen("Gelbooru")

                MDLabel:
                    text: "Danbooru"

                MDSwitch:
                    id: danbooru_switch
                    on_active: root.set_provider(self, "Danbooru")

                MDIconButton:
                    icon: 'cog'
                    on_press: open_booru_config_screen("Danbooru")

                MDLabel:
                    text: "Rule34"

                MDSwitch:
                    id: rule34_switch
                    on_active: root.set_provider(self, "Rule34")

                MDIconButton:
                    icon: 'cog'
                    on_press: open_booru_config_screen("Rule34")

                MDLabel:
                    text: "Safebooru"

                MDSwitch:
                    id: safebooru_switch
                    on_active: root.set_provider(self, "Safebooru")


                MDIconButton:
                    icon: 'cog'
                    on_press: open_booru_config_screen("Safebooru")

                MDLabel:
                    text: "Pixiv"

                MDSwitch:
                    id: pixiv_switch
                    on_active: root.set_provider(self, "Pixiv")

                MDIconButton:
                    icon: 'cog'

                MDLabel:
                    text: "Twitter"

                MDSwitch:
                    id: twitter_switch
                    on_active: root.set_provider(self, "Twitter")

                MDIconButton:
                    icon: 'cog'

                MDLabel:
                    text: "Reddit"

                MDSwitch:
                    id: reddit_switch
                    on_active: root.set_provider(self, "Reddit")

                MDIconButton:
                    icon: 'cog'




