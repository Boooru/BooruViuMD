#: import gch kivy.utils.get_color_from_hex
#: import set_screen ui.screens.screen_util.set_screen

<SettingsHomeScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos

    MDGridLayout:
        # orientation: 'vertical'
        cols: 1
        size: (root.size[0], root.size[1])
        size_hint: (None, None)

        MDToolbar:
            title: "Settings"

            elevation: 10
            left_action_items: [["arrow-left", lambda x: set_screen('home screen')]]

        ScrollView:
            id: settings_scroller
            do_scroll_y: True
            do_scroll_x: False
            size_hint: 1, None

            MDList:
                id: settings_list

                OneLineListItem:
                    text: "Appearance"
                    on_press: set_screen('settings appearance screen')

                OneLineListItem:
                    text: "Providers"
                    on_press: set_screen('provider setup screen')

