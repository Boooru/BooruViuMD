#: import gch kivy.utils.get_color_from_hex
#: import set_screen ui.screens.set_screen

<BigViewScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos


    MDBoxLayout:
        orientation: "vertical"

        ImageContainer:
            id: main_image_container
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDToolbar:
            id: tool_bar
            title: "BooruViu"
            pos_hint: {"bottom" : 1}
            elevation: 10
            right_action_items: [["dots-vertical", lambda x: set_screen(root, "root scroll screen")]]
