#: import gch kivy.utils.get_color_from_hex
#: import set_screen ui.screens.set_screen

<BigViewScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos


    MDBoxLayout:
        orientation: "vertical"

        ImageContainer:
            id: main_image_container
            orientation: "horizontal"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        MDToolbar:
            id: tool_bar
            title: "BooruViu"
            pos_hint: {"bottom" : 1}
            elevation: 10
            left_action_items: [["arrow-left", lambda x: set_screen("root scroll screen")]]
            right_action_items: [["download", lambda x: x], ["open-in-new", lambda x: x], ["account-search", lambda x: x], ["tag-multiple", lambda x:x]]
