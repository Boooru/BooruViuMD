#: import gch kivy.utils.get_color_from_hex
#: import set_screen ui.screens.set_screen
#: import async_downloader main.async_downloader
#: import open_link_in_browser util.utils.open_link_in_browser

<BigViewScreen>

    canvas.before:
        Color:
            rgba: gch("#35353f")
        Rectangle:
            size: self.size
            pos: self.pos


    MDBoxLayout:
        orientation: "vertical"

        ImageContainer:
            id: main_image_container
            orientation: "horizontal"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}


        MDToolbar:
            id: tool_bar
            title: "BooruViu"
            pos_hint: {"bottom" : 1}
            elevation: 10
            left_action_items: [["arrow-left", lambda x: set_screen("root scroll screen")]]
            right_action_items: [["download", lambda x: async_downloader.submit_url(root.meta_data.image_full)], ["open-in-new", lambda x: open_link_in_browser(root.meta_data.image_full)], ["account-search", lambda x: open_link_in_browser(root.meta_data.source)], ["tag-multiple", lambda x:x]]
